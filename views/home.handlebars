<h1>Database Backed Workout Tracker</h1>

<h3>Add a new exercise:</h3>
<fieldset>
  <form id="addExercise" action="" method="get">
    Exercise name:
    <input type="text" name="name">
    <br>
    Number of reps:
    <input type="number" name="reps">
    <br>
    Weight of weights used:
    <input type="number" name="weight">
    <br>
    Date performed:
    <input type="date" name="date">
    <br>
    Unit of measure for weight:
    <select name="lbs">
      <option value="1">lbs</option>
      <option value="0">kg</option>
    </select>
    <br>
    <input type="submit" name="addExerciseButton" value="Add Exercise">
  </form>
</fieldset>
<h3>Current Exercises</h3>
{{results}}
